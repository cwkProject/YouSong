<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.yousong.yousong.model.local.AdsDetail"/>

        <variable
            name="ages"
            type="com.yousong.yousong.architecture.viewmodel.AgesRangeViewModel"/>

        <variable
            name="holder"
            type="com.yousong.yousong.operator.OnDirectionOperator"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:goneUnless="@{!data.ads.type}">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/layout_default_spacing"
            android:layout_marginTop="@dimen/layout_default_spacing"
            android:background="@android:color/darker_gray"/>

        <include
            layout="@layout/layout_directional_user"
            app:ages="@{ages}"
            app:data="@{data.directional}"
            app:holder="@{holder}"/>

        <include
            layout="@layout/layout_directional_region"
            app:data="@{data.directional}"
            app:holder="@{holder}"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_default_spacing"
                android:text="@string/name_filter_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_default_spacing"/>

        </LinearLayout>

    </LinearLayout>

</layout>