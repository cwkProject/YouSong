<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/grey_100</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MeTextStyle">
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="layout_gravity">center_vertical</item>
    </style>

    <style name="MeRowStyle">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>
